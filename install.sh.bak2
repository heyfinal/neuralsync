# Progress tracking
CURRENT_STEP=0
TOTAL_STEPS=12
CURRENT_TASK=""

# Update status - simplified without cursor positioning
update_status() {
    local task="$1"
    CURRENT_TASK="$task"
    CURRENT_STEP=$((CURRENT_STEP + 1))
    
    # Show simple progress
    local progress=$((CURRENT_STEP * 20 / TOTAL_STEPS))
    local bar=""
    for i in $(seq 1 20); do
        if [ $i -le $progress ]; then
            bar="${bar}â–ˆ"
        else
            bar="${bar}â–‘"
        fi
    done
    
    echo -e "${CYAN}Progress: ${YELLOW}[$bar] ${WHITE}($CURRENT_STEP/$TOTAL_STEPS)${NC}"
    echo -e "${WHITE}Current: ${CYAN}$task${NC}"
}

# Simple logging functions
